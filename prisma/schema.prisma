generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model File {
  id         String   @id @default(uuid())
  name       String // Nama file
  path       String // Path atau URL file
  size       Int // Ukuran file (dalam byte)
  mimeType   String // Tipe file (MIME type)
  uploadedAt DateTime @default(now()) // Waktu file diunggah
  userId     String? // ID referensi ke entitas lain (opsional)
}
