{
  "info": {
    "name": "Express Storage Module API",
    "description": "Comprehensive Postman collection for Express storage module API with JWT authentication and file upload capabilities",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://linksy.id/",
      "type": "string"
    },
    {
      "key": "jwt_secret",
      "value": "inirahasia",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Home Page",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}",
          "protocol": "https",
          "host": ["linksy.id"]
        },
        "description": "Get the home page of the application"
      },
      "response": []
    },
    {
      "name": "Storage Management",
      "item": [
        {
          "name": "Get All Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}api/v1/storages/",
              "protocol": "https",
              "host": ["linksy.id"],
              "path": ["api", "v1", "storages", ""]
            },
            "description": "Retrieve all uploaded files. Requires JWT authentication."
          },
          "response": []
        },
        {
          "name": "Get File by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}api/v1/storages/:id",
              "protocol": "https",
              "host": ["linksy.id"],
              "path": ["api", "v1", "storages", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID of the file to retrieve"
                }
              ]
            },
            "description": "Retrieve a specific file by its ID. Requires JWT authentication."
          },
          "response": []
        },
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "multipart/form-data",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "contentType": "application/octet-stream",
                  "description": "File to upload (JPEG, PNG, JPG only, max 10MB)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}api/v1/storages/",
              "protocol": "https",
              "host": ["linksy.id"],
              "path": ["api", "v1", "storages", ""]
            },
            "description": "Upload a new file. Requires JWT authentication. Supports JPEG, PNG, JPG files up to 10MB."
          },
          "response": []
        },
        {
          "name": "Update File",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "multipart/form-data",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "contentType": "application/octet-stream",
                  "description": "New file to upload (JPEG, PNG, JPG only, max 10MB)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}api/v1/storages/:id",
              "protocol": "https",
              "host": ["linksy.id"],
              "path": ["api", "v1", "storages", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID of the file to update"
                }
              ]
            },
            "description": "Update an existing file by ID. Requires JWT authentication. Supports JPEG, PNG, JPG files up to 10MB."
          },
          "response": []
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}api/v1/storages/:id",
              "protocol": "https",
              "host": ["linksy.id"],
              "path": ["api", "v1", "storages", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID of the file to delete"
                }
              ]
            },
            "description": "Delete a file by ID. Requires JWT authentication."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Generate JWT Token (Example)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user123\",\n  \"username\": \"testuser\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}api/auth/login",
              "protocol": "https",
              "host": ["linksy.id"],
              "path": ["api", "auth", "login"]
            },
            "description": "Example endpoint to generate JWT token. Note: This is an example endpoint that may not exist in your actual API. You'll need to replace this with your actual authentication endpoint."
          },
          "response": [
            {
              "name": "200 OK",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json",
                    "type": "text"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"userId\": \"user123\",\n  \"username\": \"testuser\"\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{base_url}}api/auth/login",
                  "protocol": "https",
                  "host": ["linksy.id"],
                  "path": ["api", "auth", "login"]
                }
              },
              "status": "OK",
              "code": 200,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json",
                  "type": "text"
                }
              ],
              "body": "{\n  \"success\": true,\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiJ1c2VyMTIzIiwidXNlcm5hbWUiOiJ0ZXN0dXNlciIsImlhdCI6MTYxNjE2NjAwMCwiZXhwIjoxNjE2MTY4NjAwfQ.test_signature\"\n}"
            }
          ]
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// This script runs before each request",
          "// You can add logic to generate JWT tokens here if needed",
          "console.log('Making request to: ' + request.url);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// This script runs after each request",
          "console.log('Response status: ' + responseCode.code);",
          "// Check if response is successful",
          "pm.test('Status code is 200', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "// Check if response has JSON content",
          "pm.test('Response is JSON', function () {",
          "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "});"
        ]
      }
    }
  ]
}